{% extends 'blog/base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<section class="section" style="display: flex; align-items: center; justify-content: center; margin-right: -200px;">
    <div class="row" style="display: flex; align-items: center; justify-content: center; margin-top: 150px;">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Liste des événements: ({{ events|length }})</h5>

                <!-- Table with stripped rows -->
                <table class="table table-sm table-striped" >
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>NomEvent</th>
                            <th>Categorie</th>
                            <th>Date</th>
                            <th>Heure</th>
                            <th>Lieu</th>
                            <th>Capacite</th>
                            <th>Cout</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for event in events %}
                            <tr>
                                <td>{{ event.id }}</td>
                                <td>{{ event.nomEvent }}</td>
                                <td>{{ event.categorie }}</td>
                                <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
                                <td>{{ event.heure ? event.heure|date('H:i:s') : '' }}</td>
                                <td>{{ event.lieu }}</td>
                                <td>{{ event.capacite }}</td>
                                <td>{{ event.cout }}</td>
                                <td>
                                    <a href="{{ path('app_event_show', {'id': event.id}) }}"><i class="fas fa-eye"></i></a>
                                    <a href="{{ path('app_event_edit', {'id': event.id}) }}"><i class="fas fa-edit"></i> </a>
                                    <a href="{{ path('app_event_delete', {'id': event.id}) }}"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <div style="display: flex; align-items: center; justify-content: center;">
                    <!-- Pagination rendering code here -->
                </div>

                <a href="{{ path('app_event_new') }}"><i class="fas fa-plus"></i>Créer événement</a>
                <!-- End small tables -->

            </div>
        </div>

    </div>
</section>
{% endblock %}
